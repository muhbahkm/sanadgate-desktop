<Application x:Class="SanadGate.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SanadGate.Desktop"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries />

            <!-- Global Font: uses embedded resource included via csproj (assets/fonts/) -->
            <!-- Pack URI uses assembly-qualified component path and includes filename -->
            <FontFamily x:Key="AppArabicFont">pack://application:,,,/SanadGate.Desktop;component/assets/fonts/IBMPlexSansArabic-Regular.ttf#IBM Plex Sans Arabic</FontFamily>

            <!-- Global FlowDirection -->
            <Style TargetType="Window">
                <Setter Property="FlowDirection" Value="RightToLeft" />
                <Setter Property="FontFamily" Value="{StaticResource AppArabicFont}" />
            </Style>

            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource AppArabicFont}" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Foreground" Value="#333333" />
                <Setter Property="TextOptions.TextFormattingMode" Value="Display" />
            </Style>

            <Style TargetType="TextBox">
                <Setter Property="FontFamily" Value="{StaticResource AppArabicFont}" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Padding" Value="10" />
                <Setter Property="Margin" Value="0" />
                <Setter Property="BorderBrush" Value="#DADADA" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Background" Value="White" />
                <Setter Property="Foreground" Value="#222222" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="FontFamily" Value="{StaticResource AppArabicFont}" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Padding" Value="12,8" />
                <Setter Property="Margin" Value="4" />
                <Setter Property="Cursor" Value="Hand" />
            </Style>

            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="{StaticResource AppArabicFont}" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Foreground" Value="#333333" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
