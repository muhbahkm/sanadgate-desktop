<Window x:Class="SanadGate.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SanadGate.Desktop"
        Title="سند غيت - نقطة بيع"
        Height="700"
        Width="1200"
        WindowStyle="SingleBorderWindow"
        Background="#F5F5F5"
        FlowDirection="RightToLeft">

    <Window.Resources>
        <Style x:Key="ArabicTextBlock" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#333333" />
        </Style>

        <Style x:Key="ArabicTextBox" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#CCCCCC" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#333333" />
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Padding" Value="20,12" />
            <Setter Property="Background" Value="#2E7D32" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Padding" Value="20,12" />
            <Setter Property="Background" Value="#757575" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <Style x:Key="SettingsButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Padding" Value="20,12" />
            <Setter Property="Background" Value="#1976D2" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Main Content Area -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel - QR Display -->
            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="30" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border BorderBrush="#E0E0E0" BorderThickness="2" Background="White" Padding="20" Width="560" Height="760" HorizontalAlignment="Center">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image Source="{Binding QrCodeImage}" Width="500" Height="500" Margin="0,0,0,15" />
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="اسم المتجر:" Style="{StaticResource ArabicTextBlock}" FontWeight="Medium" Width="100" />
                                <TextBlock Text="{Binding MerchantName}" Style="{StaticResource ArabicTextBlock}" />
                            </StackPanel>
                            <TextBlock Height="8" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="رقم الحساب:" Style="{StaticResource ArabicTextBlock}" FontWeight="Medium" Width="100" />
                                <TextBlock Text="{Binding MerchantAccount}" Style="{StaticResource ArabicTextBlock}" />
                            </StackPanel>
                            <TextBlock Height="8" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="الرقم المرجعي:" Style="{StaticResource ArabicTextBlock}" FontWeight="Medium" Width="100" />
                                <TextBlock Text="{Binding InvoiceReference}" Style="{StaticResource ArabicTextBlock}" />
                            </StackPanel>
                            <TextBlock Height="8" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="المبلغ:" Style="{StaticResource ArabicTextBlock}" FontWeight="Medium" Width="100" />
                                <TextBlock Text="{Binding TotalAmount}" Style="{StaticResource ArabicTextBlock}" />
                            </StackPanel>
                            <TextBlock Height="8" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="العملة:" Style="{StaticResource ArabicTextBlock}" FontWeight="Medium" Width="100" />
                                <TextBlock Text="{Binding Currency}" Style="{StaticResource ArabicTextBlock}" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Right Panel - Input Fields -->
            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="30" VerticalAlignment="Top">
                <TextBlock Text="إدخال بيانات الدفع" Style="{StaticResource ArabicTextBlock}" FontSize="22" FontWeight="Bold" Margin="0,20,0,0" />
                <TextBlock Height="20" />
                
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="* إجمالي المبلغ" Style="{StaticResource ArabicTextBlock}" FontWeight="Medium" />
                    <TextBlock Height="8" />
                    <TextBox Text="{Binding TotalAmount, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ArabicTextBox}" />
                </StackPanel>
                <TextBlock Height="20" />

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="الرقم المرجعي للفاتورة" Style="{StaticResource ArabicTextBlock}" FontWeight="Medium" />
                    <TextBlock Height="8" />
                    <TextBox Text="{Binding InvoiceReference, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ArabicTextBox}" />
                </StackPanel>
                <TextBlock Height="20" />

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="اسم الكاشير" Style="{StaticResource ArabicTextBlock}" FontWeight="Medium" />
                    <TextBlock Height="8" />
                    <TextBox Text="{Binding CashierName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ArabicTextBox}" />
                </StackPanel>
                <TextBlock Height="20" />

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="ملاحظات (اختياري)" Style="{StaticResource ArabicTextBlock}" FontWeight="Medium" />
                    <TextBlock Height="8" />
                    <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ArabicTextBox}" Height="80" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Bottom Panel - Action Buttons -->
        <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="30,20">
                <Button Content="✓ تم الدفع" Style="{StaticResource PrimaryButton}" Width="160" Click="OnPayClick" />
                <TextBlock Width="15" />
                <Button Content="✕ إلغاء" Style="{StaticResource SecondaryButton}" Width="140" Click="OnCancelClick" />
                <TextBlock Width="15" />
                <Button Content="سجل العمليات" Style="{StaticResource SettingsButton}" Width="140" Click="OnHistoryClick" ToolTip="Alt+H" />
                <TextBlock Width="15" />
                <Button Content="⚙ الإعدادات" Style="{StaticResource SettingsButton}" Width="140" Click="OnSettingsClick" ToolTip="Alt+S" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
