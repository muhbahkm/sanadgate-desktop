<Window x:Class="SanadGate.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SanadGate.Desktop"
        Title="سند غيت - نقطة بيع"
        Height="700"
        Width="1200"
        WindowStyle="SingleBorderWindow"
        Background="#F5F5F5"
        FlowDirection="RightToLeft">

    <Window.Resources>
        <Style x:Key="ArabicTextBlock" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource AppArabicFont}" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#333333" />
            <Setter Property="Language" Value="ar-YE" />
            <Setter Property="Typography.NumeralStyle" Value="Normal" />
        </Style>

        <Style x:Key="ArabicTextBox" TargetType="TextBox">
            <Setter Property="FontFamily" Value="{StaticResource AppArabicFont}" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#CCCCCC" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#333333" />
            <Setter Property="Language" Value="ar-YE" />
            <Setter Property="Typography.NumeralStyle" Value="Normal" />
        </Style>

        <Style x:Key="FlatButton" TargetType="Button">
            <Setter Property="FontFamily" Value="{StaticResource AppArabicFont}" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,8" />
            <Setter Property="Background" Value="#f2f2f2" />
            <Setter Property="BorderBrush" Value="#333333" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Height" Value="55" />
            <Setter Property="Width" Value="140" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <Style x:Key="SecondaryFlatButton" TargetType="Button" BasedOn="{StaticResource FlatButton}">
            <Setter Property="Width" Value="140" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Main Content Area -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel - QR Display -->
            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="30" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border BorderBrush="#E0E0E0" BorderThickness="2" Background="White" Padding="20" Width="560" Height="760" HorizontalAlignment="Center">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image Source="{Binding QrCodeImage}" Width="500" Height="500" Margin="0,0,0,15" />
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="اسم المتجر:" Style="{StaticResource ArabicTextBlock}" FontWeight="Medium" Width="120" />
                                <TextBlock Text="{Binding MerchantName}" Style="{StaticResource ArabicTextBlock}" />
                            </StackPanel>
                            <TextBlock Height="8" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="رقم الحساب:" Style="{StaticResource ArabicTextBlock}" FontWeight="Medium" Width="120" />
                                <TextBlock Text="{Binding MerchantAccount}" Style="{StaticResource ArabicTextBlock}" />
                            </StackPanel>
                            <TextBlock Height="8" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="الرقم المرجعي:" Style="{StaticResource ArabicTextBlock}" FontWeight="Medium" Width="120" />
                                <TextBlock Text="{Binding InvoiceReference}" Style="{StaticResource ArabicTextBlock}" />
                            </StackPanel>
                            <TextBlock Height="8" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="المبلغ:" Style="{StaticResource ArabicTextBlock}" FontWeight="Medium" Width="120" />
                                <TextBlock Text="{Binding TotalAmount}" Style="{StaticResource ArabicTextBlock}" />
                            </StackPanel>
                            <TextBlock Height="8" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="العملة:" Style="{StaticResource ArabicTextBlock}" FontWeight="Medium" Width="120" />
                                <TextBlock Text="{Binding Currency}" Style="{StaticResource ArabicTextBlock}" />
                            </StackPanel>
                            <TextBlock Height="12" />
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="اسم الكاشير:" Style="{StaticResource ArabicTextBlock}" FontWeight="Medium" />
                                <TextBox Text="{Binding CashierName, UpdateSourceTrigger=PropertyChanged}" Height="35" FontSize="18" Width="220" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Right Panel - Input Fields -->
            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="30" VerticalAlignment="Top">
                <TextBlock Text="إدخال بيانات الدفع" Style="{StaticResource ArabicTextBlock}" FontSize="22" FontWeight="Bold" Margin="0,20,0,0" />
                <TextBlock Height="20" />
                
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="* إجمالي المبلغ" Style="{StaticResource ArabicTextBlock}" FontWeight="Medium" />
                    <TextBlock Height="8" />
                    <TextBox Text="{Binding TotalAmount, UpdateSourceTrigger=PropertyChanged}" Height="50" FontSize="26" Width="420" InputScope="Number" />
                </StackPanel>
                <TextBlock Height="20" />

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="الرقم المرجعي للفاتورة" Style="{StaticResource ArabicTextBlock}" FontWeight="Medium" />
                    <TextBlock Height="8" />
                    <TextBox Text="{Binding InvoiceReference, UpdateSourceTrigger=PropertyChanged}" Height="50" FontSize="26" Width="420" />
                </StackPanel>
                <TextBlock Height="20" />

                
                <TextBlock Height="20" />

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="ملاحظات (اختياري)" Style="{StaticResource ArabicTextBlock}" FontWeight="Medium" />
                    <TextBlock Height="8" />
                    <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ArabicTextBox}" Height="80" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Bottom Panel - Action Buttons -->
            <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="30,20">
                <Button Content="_تم الدفع (Alt+Enter)" Style="{StaticResource FlatButton}" Click="OnPayClick" />
                <TextBlock Width="15" />
                <Button Content="_إلغاء (Esc)" Style="{StaticResource FlatButton}" Click="OnCancelClick" />
                <TextBlock Width="15" />
                <Button Content="_سجل العمليات (Ctrl+H)" Style="{StaticResource FlatButton}" Click="OnHistoryClick" />
                <TextBlock Width="15" />
                <Button Content="_الإعدادات (Ctrl+S)" Style="{StaticResource FlatButton}" Click="OnSettingsClick" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
