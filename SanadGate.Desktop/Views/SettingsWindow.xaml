<Window x:Class="SanadGate.Desktop.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SanadGate.Desktop"
        Title="الإعدادات"
        Height="550"
        Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        FlowDirection="RightToLeft"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="ArabicTextBlock" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#333333" />
        </Style>

        <Style x:Key="ArabicTextBox" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#CCCCCC" />
            <Setter Property="Background" Value="White" />
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="20,10" />
            <Setter Property="Background" Value="#2E7D32" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="20,10" />
            <Setter Property="Background" Value="#757575" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" Margin="30">
                <TextBlock Text="إعدادات التطبيق" Style="{StaticResource ArabicTextBlock}" FontSize="20" FontWeight="Bold" />
                <TextBlock Height="20" />

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="* اسم المتجر" Style="{StaticResource ArabicTextBlock}" FontWeight="Medium" />
                    <TextBlock Height="8" />
                    <TextBox Text="{Binding MerchantName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ArabicTextBox}" />
                </StackPanel>
                <TextBlock Height="20" />

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="* رقم حساب التاجر في سندغيت" Style="{StaticResource ArabicTextBlock}" FontWeight="Medium" />
                    <TextBlock Height="8" />
                    <TextBox Text="{Binding MerchantAccount, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ArabicTextBox}" />
                </StackPanel>
                <TextBlock Height="20" />

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="رقم التواصل" Style="{StaticResource ArabicTextBlock}" FontWeight="Medium" />
                    <TextBlock Height="8" />
                    <TextBox Text="{Binding ContactNumber, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ArabicTextBox}" />
                </StackPanel>
                <TextBlock Height="20" />

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="لون الواجهة" Style="{StaticResource ArabicTextBlock}" FontWeight="Medium" />
                    <TextBlock Height="8" />
                    <StackPanel Orientation="Horizontal">
                        <TextBox Text="{Binding ThemeColor, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ArabicTextBox}" Width="150" />
                        <TextBlock Width="10" />
                        <Button Content="اختر لون" Style="{StaticResource PrimaryButton}" Command="{Binding PickColorCommand}" />
                    </StackPanel>
                </StackPanel>
                <TextBlock Height="20" />

                <StackPanel Orientation="Vertical">
                    <CheckBox IsChecked="{Binding EnableLargeFont, UpdateSourceTrigger=PropertyChanged}" FontFamily="Segoe UI" FontSize="14" Foreground="#333333">
                        <TextBlock Text="تكبير الخط" />
                    </CheckBox>
                </StackPanel>
                <TextBlock Height="20" />

                <StackPanel Orientation="Vertical">
                    <CheckBox IsChecked="{Binding EnableSqliteLogging, UpdateSourceTrigger=PropertyChanged}" FontFamily="Segoe UI" FontSize="14" Foreground="#333333">
                        <TextBlock Text="حفظ السجلات في قاعدة البيانات" />
                    </CheckBox>
                    <TextBlock Text="عند تفعيلها، سيتم حفظ جميع المعاملات تلقائياً" Style="{StaticResource ArabicTextBlock}" FontSize="12" Foreground="#666666" Margin="20,5,0,0" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons Area -->
        <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="30,20">
                <Button Content="✓ حفظ الإعدادات" Style="{StaticResource PrimaryButton}" Width="140" Command="{Binding SaveCommand}" />
                <TextBlock Width="15" />
                <Button Content="✕ إغلاق" Style="{StaticResource SecondaryButton}" Width="120" Command="{Binding CancelCommand}" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
